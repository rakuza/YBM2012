<Window x:Class="YBMForms.PhotoEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PhotoEditor" Height="500" Width="600">
    <StackPanel Background="AliceBlue" Margin="0,0,0,20">
        <Grid Background="#FFD8D8D8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="373*"/>
                <ColumnDefinition Width="110*"/>
                <ColumnDefinition Width="109*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Width="100" HorizontalAlignment="Right" Click="Button_Click_2">Tick</Button>
            <Button Grid.Column="2" Width="100" HorizontalAlignment="Right">Cross</Button>
            <Button Content="Button" Width="100" Click="Button_Click_1"/>
        </Grid>
        <Viewbox Margin="20,20,20,0" >
            <Canvas Name="CropContainer" Height="100" Width="100" MouseLeftButtonDown="pbxContent_MouseDown_1" MouseMove="pbxContent_MouseMove_1"  MouseLeftButtonUp="pbxContent_MouseLeftButtonUp_1">
                <Image Name="pbxContent" Width="100" Height="100" Panel.ZIndex="0"  />
            </Canvas>
        </Viewbox>
    </StackPanel>
</Window>
