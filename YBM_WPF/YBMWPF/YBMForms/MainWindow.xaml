    
<Window x:Class="YBMForms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Title="MainWindow" Height="auto" Width="auto" WindowStartupLocation="CenterScreen">
    <Window.Resources>



        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="UIL/AdornerLib/Resources/DesignerItem.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <DockPanel>
        
        <Grid DockPanel.Dock="Top" Height="75">
            <Label Background="#FFC7C7C7">top</Label>
        </Grid>
        
        <StackPanel DockPanel.Dock="Left" 
              Background="#FFECECEC"
              Width="100">
            <Label>left</Label>
            
            <Button Name="_SpawnTextBox"
                    Click="SpawnControl">TextBox</Button>
            <Button Name="_SpawnPictureBox"
                    Click="SpawnControl">PictureBox</Button>
            <Button Name="_SpawnRect"
                    Click="SpawnControl">Rectangle</Button>
            <Button Name="_SpawnElipse"
                    Click="SpawnControl"
                    >Elipse</Button>
            
        </StackPanel>

        <Grid DockPanel.Dock="Right" 
              Background="#FFECECEC"
              Width="250">
            <Label>Right</Label>
        </Grid>

        <Canvas x:Name="DesignerCanvas"
            ClipToBounds="True"
            SnapsToDevicePixels="True"
                DockPanel.Dock="Bottom"
                >
        
        <ContentControl
            Width="200"
            Height="300"
            Padding="3"
            Canvas.Top="94"
            Canvas.Left="162"
            Style="{StaticResource DesignerItemStyle}"
            MouseDoubleClick="DoubleClickSelect"
            ClipToBounds="True">
            <RichTextBox IsHitTestVisible="True" >
                <FlowDocument>
                    <Paragraph>
                        test
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </ContentControl>
    </Canvas>
        
    </DockPanel>
</Window>
