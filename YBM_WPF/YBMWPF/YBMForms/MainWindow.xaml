    
<Window x:Class="YBMForms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:s="clr-namespace:YBMForms"
        Title="MainWindow" Height="auto" Width="auto" WindowStartupLocation="CenterScreen"
        PreviewKeyDown="Window_KeyDown_1">
    <Window.Resources>


            <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="UIL/AdornerLib/Resources/DesignerItem.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <DockPanel>
        
        <Grid DockPanel.Dock="Top" Height="75">
            <Label Background="#FFC7C7C7">top</Label>
        </Grid>
        
        <StackPanel DockPanel.Dock="Left" 
              Background="#FFECECEC"
              Width="100">
            <Label>left</Label>
            
            <Button Name="_SpawnTextBox"
                    Click="SpawnControl">TextBox</Button>
            <Button Name="_SpawnPictureBox"
                    Click="SpawnControl">PictureBox</Button>
            <Button Name="_SpawnRect"
                    Click="SpawnControl">Rectangle</Button>
            <Button Name="_SpawnElipse"
                    Click="SpawnControl"
                    >Elipse</Button>
            <Label Content="TextBoxButtons"/>
            <Button Content="Bold"/>
            <Button Content="Italic" Click="Button_Click_1"/>
            <Button Content="UnderLine"/>
            <Button Content="Font"/>
            <Label Content="Image Things"/>
            <Button Content="Edit" Click="Button_Click_3"/>
            <Label Content="OtherFunctions"/>
            <Button Content="Save" Click="Button_Click_2"/>
            <Button Content="Load" Click="Button_Click_4"/>

        </StackPanel>

        <!--<Grid DockPanel.Dock="Right" 
              Background="#FFECECEC"
              Width="250">
            <ListView>
            <Label Content="Properties" />
                <ListViewItem>
                    <Grid>
                        <Label Content="Type" RenderTransformOrigin="-1.314,0.603" />
                        <TextBox x:Name="_object" Margin="40,0,-207,0" />
                    </Grid>
                </ListViewItem>
            </ListView>
        </Grid>-->
        <Canvas
            Background="Transparent" 
            SnapsToDevicePixels="True"
            ClipToBounds="True"
            DockPanel.Dock="Bottom"
            
            >
            <Canvas x:Name="DesignerCanvas"
            ClipToBounds="True"
            SnapsToDevicePixels="True"
                    Background="White"
                    Width="1000"
                    Height="1000"
                >
        
        <ContentControl
            Width="200"
            Height="300"
            Padding="3"
            Canvas.Top="94"
            Canvas.Left="162"
            Style="{StaticResource DesignerItemStyle}"
            MouseDoubleClick="DoubleClickSelect"
            PreviewKeyDown="Window_KeyDown_1"
            ClipToBounds="True">
                <RichTextBox IsHitTestVisible="True"
                         Name="_test"
                             SpellCheck.IsEnabled="True" ForceCursor="True" IsDocumentEnabled="True">
                    <FlowDocument>
                    <Paragraph>
                        test
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </ContentControl>
        </Canvas>
        </Canvas>
        
    </DockPanel>
</Window>
