            Padding="3"
            Canvas.Top="100"
            Canvas.Left="100"
            Style="{StaticResource DesignerItemStyle}"
            MouseDoubleClick="DoubleClickSelect">
            <RichTextBox IsHitTestVisible="True" >
                <FlowDocument>
                    <Paragraph>
                        test
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </ContentControl>
    </Canvas>
